#!/bin/bash
path=$(pwd)
# Copy kubeconfig
mkdir -p ~/.kube
cp  $path/.awscluster2/config ~/.kube/config

job_id=$(echo $CI_JOB_ID)
pipeline_id=$(echo $CI_PIPELINE_ID)
releaseTag=$(echo $RELEASE_TAG)

time="date"
current_time=$(eval $time)

present_dir=$(pwd)
echo $present_dir

bash utils/e2e-cr-new jobname:local-pv-device jobphase:Waiting
bash utils/e2e-cr-new jobname:local-pv-device jobphase:Running init_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag"

################
# LitmusBook 1 #
################

# Cloning oep-e2e repository which contains all the test scripts
git clone https://$username:$password@github.com/openebs/e2e-tests.git

echo "*******Deploying Busybox Application****"

run_id="localpv";test_name=$(bash utils/generate_test_name testcase=busybox-provision-busybox-device metadata=${run_id})
echo $test_name

cd e2e-tests
cp apps/busybox/deployers/run_litmus_test.yml run_test_local_pv_device.yml

sed -i -e 's/app: busybox-litmus/app: busybox-local-pv-device/g' \
-e 's/app=busybox-sts/app=local-pv-device/g' \
-e 's/value: statefulset/value: deployment/g' \
-e 's/value: openebs-cstor-sparse/value: openebs-device/g' \
-e 's/value: openebs-busybox/value: openebs-busybox-device/g' \
-e 's/value: app-busybox-ns/value: busybox-device/g' run_test_local_pv_device.yml

sed -i '/command:/i \
          - name: RUN_ID\
            value: '"$run_id"'\
' run_test_local_pv_device.yml

cat run_test_local_pv_device.yml

bash ../utils/litmus_job_runner label='app:busybox-local-pv-device' job=run_test_local_pv_device.yml
cd ..
bash utils/dump_cluster_state;
bash utils/event_updater jobname:local-pv-device $test_name jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id"

if [ "$?" != "0" ]; then
exit 1;
fi

################
# LitmusBook 2 #
################

echo "****Deprovisioning Busybox Application****"

run_id="localpv";test_name=$(bash utils/generate_test_name testcase=busybox-deprovision-busybox-device metadata=${run_id})
echo $test_name

cd e2e-tests
cp apps/busybox/deployers/run_litmus_test.yml run_test_deprovision_device.yml

sed -i -e 's/app: busybox-litmus/app: deprovision-busybox-local-pv-device/g' \
-e 's/app=busybox-sts/app=local-pv-device/g' \
-e 's/value: statefulset/value: deployment/g' \
-e 's/value: openebs-cstor-sparse/value: openebs-device/g' \
-e 's/value: openebs-busybox/value: openebs-busybox-device/g' \
-e 's/value: provision/value: deprovision/g' \
-e 's/value: app-busybox-ns/value: busybox-device/g' run_test_deprovision_device.yml

sed -i '/command:/i \
          - name: RUN_ID\
            value: '"$run_id"'\
' run_test_deprovision_device.yml

cat run_test_deprovision_device.yml

bash ../utils/litmus_job_runner label='app:deprovision-busybox-local-pv-device' job=run_test_deprovision_device.yml
cd ..
bash utils/dump_cluster_state;
bash utils/event_updater jobname:local-pv-device $test_name jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id"

rc_val=$(echo $?)
current_time=$(eval $time)

if [ "$rc_val" != "0" ]; then
bash utils/e2e-cr-new jobname:local-pv-device jobphase:Completed end_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag" test_result:Fail
exit 1;
fi

bash utils/e2e-cr-new jobname:local-pv-device jobphase:Completed end_time:"$current_time" jobid:"$job_id" pipelineid:"$pipeline_id" testcaseid:"$case_id" openebs_version:"$releaseTag" test_result:Pass

if [ "$rc_val" != "0" ]; then
exit 1;
fi
